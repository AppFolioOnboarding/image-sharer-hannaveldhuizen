<h1>Images</h1>

<table>
  <% @images.each do |image| %>
    <tr>
      <td><%= image.id %></td>
    </tr>
    <tr>
      <td>
        <%= image_tag image.url %>
        <h3>
          Tags:
          <% image.tag_list.each do |tag| %>
            <a class='btn btn-light' href='<%= images_path(tag: tag) %>'><%= tag %></a>
          <% end %>
        </h3>
        <%= button_to 'Delete',
                      image_path(image),
                      method: :delete,
                      data: { confirm: 'Are you sure you want to delete this image?' }
        %>
      </td>
    </tr>
  <% end %>
</table>
